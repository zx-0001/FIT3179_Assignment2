{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average life expectancy of different income groups",
  "width": 250,
  "height": 100,
  "description": "A ranged dot plot that uses 'layer' to convey changing life expectancy for the five most populous countries (between 1955 and 2000).",
  "data": {
    "url": "https://raw.githubusercontent.com/zx-0001/FIT3179_Assignment2/main/data/life%20expectancy.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Year",
        "oneOf": [2001, 2019]
      }
    },
    { "filter": "datum['Life Expectancy World Bank'] > 0" }
  ],
  "encoding": {
    "x": {
      "aggregate": "average",
      "field": "Life Expectancy World Bank",
      "type": "quantitative",
      "title": "Life Expectancy (years)",
      "scale": { "domain": [20, 100] }
    },
    "y": {
      "field": "IncomeGroup",
      "type": "nominal",
      "title": "Country",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      },
      "sort": [
        "High income",
        "Upper middle income",
        "Lower middle income",
        "Low income"
      ]
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "IncomeGroup",
          "type": "nominal"
        },
        "color": { "value": "#db646f" }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {
            "domain": [2001, 2019],
            "range": ["#e6959c", "#911a24"]
          },
          "title": "Year"
        },
        "size": { "value": 100 },
        "opacity": { "value": 1 },
        "tooltip": [
          {
            "field": "IncomeGroup",
            "type": "nominal",
            "title": "Income Group"
          },
          {
            "aggregate": "average",
            "field": "Life Expectancy World Bank",
            "type": "quantitative",
            "title": "Life Expectancy (years)",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
